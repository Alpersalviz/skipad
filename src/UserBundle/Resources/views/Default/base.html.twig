<script>
    var FormsAdd={
        Link:{
            Self:$('.link-form'),
            Field:{
                Url:$('.link-form input[name ="url"]')

            } ,
            Bind:function () {
                FormsAdd.Link.Self.on('submit',function (e) {
                    e.preventDefault();
                    $.post('{{ url('ajax_url_add') }}',$(this).serialize(),function (result) {
                        if(result.success)
                        {
                            $(".link-add strong").html("<a href='127.0.0.1:8000"+result.link.Url+"'>127.0.0.1:8000/"+result.link.Url+"</a>")
                            $('.alert-success').slideDown();

                        }else {
                            $('.alert-danger').slideDown();
                        }
                    })
                    return false;
                })
            }
        },

        Bind:function () {
            FormsAdd.Link.Bind();
        }
    }

    $(document).ready(function () {

        FormsAdd.Bind();

    });



</script>

