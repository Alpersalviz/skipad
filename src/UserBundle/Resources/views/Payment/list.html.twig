{% extends 'UserBundle:Default:base.html.twig' %}
{% block content %}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    {% if type == "notification" %}
                        Ödeme Bildirimleriniz
                    {% else %}
                        Ödeme İstekleriniz
                    {% endif %}
                </h1>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Ödeme Tarihi</th>
                            <th>Durum</th>
                            <th>Miktar</th>
                            <th>Banka Bilgileri</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for payment in payments %}
                            <tr>
                                <td>{{ payment.ID }}</td>
                                <td>{{ payment.PaymentDate }}</td>
                                <td>{{ payment.Status }}</td>
                                <td>{{ payment.Balance }}</td>
                                <td>
                                    {{ payment.PaymentType }}
                                    {{ payment.PaymentInfo }}
                                </td>
                               </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
    <script>
        $(document).on('click','.advertiser-cancel ',function () {
            var id= $(this).data('id');
            $.post('{{ url('user_advertiser_cancel') }}' , {
                id:id
            }, function (result) {
                if(result){
                    setTimeout(function () {
                        location.reload();
                    })
                    $('.alert-success').slideDown();

                }else{
                    $('.alert-danger').slideDown();
                }

            });
        });

    </script>
{% endblock %}
