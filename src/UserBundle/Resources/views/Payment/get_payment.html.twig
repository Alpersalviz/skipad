
{% extends 'UserBundle:Default:base.html.twig' %}
{% block content %}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Ödeme İsteği</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        {% if(setting.MinimumPayment > user.Balance) %}
                Ödeme alabilceğiniz miktar {{ setting.MinimumPayment }}TL'dir. <br/>
                Şuan bakiyeniz {{ user.Balance }}TL'dir

        {% else %}
        <div class="alert alert-success" style="display: none">
            <strong>Ödeme bildiriminizi aldık, ödeme en kısa zamanda hesabınıza geçicektir</strong>
        </div>

        <div class="alert alert-danger" style="display: none">
            <strong>Hata oluştu tekrar deneyiniz</strong>
        </div>
        <div class="row">

            <form id="get-payment" method="post" role="form" >
            <div class="col-lg-12">
                <div class="panel panel-green">
                    <div class="panel-heading">
                      Ödeme Bilgileri
                    </div>
                    <div class="panel-body">
                        Ad-Soyad:{{ user.Name }} {{ user.SurName }}</br>
                        Banka: {{ user.PaymentInfo }}</br>
                        Email: {{ user.Email }} Telefon Numarası:{{ user.PhoneNumber }}

                    </div>
                    <div class="panel-footer">
                        Bakiye: {{ user.Balance }} TL
                    </div>
                </div>
            </div>


               <div class="col-sm-6 col-sm-offset-3">
                   <input type="submit" class="btn btn-primary btn-lg" name="get-payment-submit" id="get-payment-submit" tabindex="4" class="form-control btn btn-register" value="Ödeme Al">
               </div>
           </form>
            </div>

        {% endif %}


    </div>
{% endblock %}


{% block javascript %}
    <script>
        var Forms={
            Link:{
                Self:$('#get-payment'),
                Bind:function () {
                    Forms.Link.Self.on('submit',function (e) {
                        e.preventDefault();
                        $.post('{{ url('user_ajax_get_payment') }}',$(this).serialize(),function (result) {
                            if(result.success)
                            {
                                setTimeout(function () {
                                    location.reload();
                                },1000);
                                $('.alert-success').slideDown();
                            }else {
                                $('.alert-danger').slideDown();
                            }
                        })
                    })
                }
            },

            Bind:function () {
                Forms.Link.Bind();
            }
        }

        $(document).ready(function () {
            Forms.Bind();

        });


    </script>
{% endblock %}