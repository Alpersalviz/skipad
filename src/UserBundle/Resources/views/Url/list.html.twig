{% extends 'UserBundle:Default:base.html.twig' %}
{% block content %}

<section id="mainForm" class="clearfix" xmlns="http://www.w3.org/1999/html">
        <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ Label("Linkler") }}</h1>
                <div class="alert alert-success" style="display: none">
                    <strong>{{ Label("Silindi!") }}</strong>
                </div>

                <div class="alert alert-danger" style="display: none"><strong>{{ Label("Silinemedi!") }}</strong></div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ Label("Link") }}</th>
                            <th>{{ Label("Yönlendirilen Link") }}</th>
                            <th>{{ Label("Kazanılan Para") }}</th>
                            <th>{{ Label("Çoğul Gösterim") }}</th>
                            <th>{{ Label("Linkler") }}</th>
                            <th>{{ Label("Oluşturulma Tarihi") }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for url in urls %}
                            <tr>
                                <td></td>
                                <td>
                                    <a href="{{ url("homepage_url_redirect",{ 'url' :url.Url }) }}"><span>{{ url.Url }}</span></a>
                                </td>
                                <td><span>{{ url.RedirectUrl }}</span></td>
                                <td>{{ url.Price }}</td>
                                <td>{{ url.Impression }}</td>
                                <td>{{ url.Visitor }}</td>
                                <td>{{ url.CreatedDate }}</td>
                                <td>
                                    <button type="button"
                                            onclick="location.href='{{ url("user_url_update",{ 'id' :url.ID }) }}';"
                                            class="edit btn btn-primary glyphicon glyphicon-pencil"></button>
                                    <button type="button" data-id="{{ url.ID }}"
                                            class="link-remove edit btn btn-primary glyphicon glyphicon-remove"></button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
    </section>
{% endblock %}
{% block javascript %}
    <script>
        $(document).on('click', '.link-remove ', function () {
            var id = $(this).data('id');
            $.post('{{ url('user_ajax_url_delete') }}', {
                id: id
            }, function (result) {
                if (result) {
                    location.reload();
                    $('.alert-success').slideDown();

                } else {
                    $('.alert-danger').slideDown();
                }

            });
        });

    </script>
{% endblock %}