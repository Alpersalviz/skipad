{% extends 'AdminBundle:Default:base.html.twig' %}
{% block content %}

   <div id="page-wrapper">
      <div class="row">
         <div class="col-lg-12">
            <h1 class="page-header">Reklamlar</h1>

         </div>
         <!-- /.col-lg-12 -->
      </div>
      <div class="row">
         <div class="panel-body">
            <div class="table-responsive">
               <table class="table table-striped">
                  <thead>
                  <tr>
                     <th>#</th>
                     <th>Başlık</th>
                     <th>İframe Link</th>
                     <th>Reklam Tipi</th>
                     <th>Gösterim</th>
                     <th>Ppc</th>
                     <th>Harcanılan Para</th>
                     <th>Eklenen Para</th>
                     <th></th>
                  </tr>
                  </thead>
                  <tbody>

                  {% for advertiser in advertisers %}
                     <tr>
                        <td></td>
                        <td>{{ advertiser.Title }}</td>
                        <td> <a href="{{ advertiser.Url }}"><span>{{ advertiser.Url }}</span></a>  </td>
                        <td>{{ advertiser.AdType }}</td>
                        <td>{{ advertiser.Impression }}</td>
                        <td>{{ advertiser.Ppc }}</td>
                        <td>{{ advertiser.FirstPrice - advertiser.CurrentPrice }}</td>
                        <td> {{ advertiser.FirstPrice }}</td>
                        <td> <button type="button" onclick="location.href='{{ url("admin_advertiser_update",{ 'id' :advertiser.ID }) }}';" class="edit btn btn-primary glyphicon glyphicon-pencil"> {% if advertiser.Publish == 1  %}  <button type="button" data-publish="0"  data-id="{{ advertiser.ID }}';" class="advertiser-cancel btn btn-danger glyphicon glyphicon-ban-circle"></button>{% else %}  <button type="button" data-publish="1"  data-id="{{ advertiser.ID }}';" class="advertiser-cancel btn btn-primary glyphicon glyphicon-ban-circle"></button> {% endif %}</td>
                     </tr>
                  {% endfor %}
                  </tbody>
               </table>
            </div>
            <!-- /.table-responsive -->
         </div>
      </div>
   </div>
{% endblock %}
{% block javascript %}
   <script>
      $(document).on('click','.advertiser-cancel ',function () {
         var id= $(this).data('id');
         var publish= $(this).data('publish');
         $.post('{{ url('admin_advertiser_cancel') }}' , {
            id:id,
            publish:publish
         }, function (result) {
            if(result){
               setTimeout(function () {
                  location.reload();
               })
               $('.alert-success').slideDown();

            }else{
               $('.alert-danger').slideDown();
            }

         });
      });

   </script>
{% endblock %}
