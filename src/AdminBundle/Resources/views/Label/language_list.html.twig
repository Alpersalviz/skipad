{% extends 'AdminBundle:Default:base.html.twig' %}
{% block content %}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Diller</h1>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Dil</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for language in languages %}
                            <tr>
                                <td> <a href="{{ url("label_list",{ 'lang' :language.ID , 'limit' :10  ,'page' :0}) }}">{{ language.Code }}</a></td>
                                <td>
                                    <button type="button"
                                            onclick="location.href='{{ url("label_add",{ 'id' :language.ID }) }}';"
                                            class="plus btn btn-primary glyphicon glyphicon-plus"></button>
                                    <button type="button"
                                            onclick="location.href='{{ url("label_list",{ 'lang' :language.ID , 'limit' :10  ,'page' :0}) }}';"
                                            class="edit btn btn-primary glyphicon glyphicon-pencil"></button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
{% endblock %}

