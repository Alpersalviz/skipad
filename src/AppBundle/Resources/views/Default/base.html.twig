<script>
    var Forms={
        Link:{
            Self:$('.link-form'),
            Field:{
                Url:$('#login-form input[name ="url"]')

            } ,
            Bind:function () {
                Forms.Link.Self.on('submit',function (e) {
                    e.preventDefault();
                    $.post('{{ url('ajax_url_add') }}',$(this).serialize(),function (result) {
                        if(result.success)
                        {
                            $(".link-add strong").html("<a href='127.0.0.1:8000"+result.link.Url+"'>127.0.0.1:8000/"+result.link.Url+"</a>")
                            $('.alert-success').slideDown();

                        }else {
                            $('.alert-danger').slideDown();
                        }
                    })
                    return false;
                })
            }
        },

        Bind:function () {
            Forms.Link.Bind();
        }
    }

    $(document).ready(function () {

        Forms.Bind();

    });



</script>
